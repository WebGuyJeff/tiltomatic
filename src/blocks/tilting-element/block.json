{
	"$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
	"name": "tiltomatic/tilting-element",
	"version": "0.0.1",
	"title": "Animated tilting element",
	"category": "design",
	"icon": "thumbs-up",
	"description": "Tilting animation which follows the mouse cursor",
	"keywords": [ "tiltomatic", "tilting", "animation" ],
	"textdomain": "tiltomatic",
	"editorScript": "file:./tilting-element.js",
	"ancestor": [ "tiltomatic/tilting-elements-group" ],
	"usesContext": [
		"tiltomatic/perspective",
		"tiltomatic/isolated-perspective"
	],
	"supports": {
		"html": false,
		"layout": {
			"allowInheriting": true
		}
	},
	"attributes": {
		"perspective": {
			"type": "string"
		},
		"isolatedPerspective": {
			"type": "boolean",
			"default": false
		}
	}
}

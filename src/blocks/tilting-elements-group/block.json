{
	"$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
	"name": "tiltomatic/tilting-elements-group",
	"version": "0.0.1",
	"title": "Animated tilting group",
	"category": "design",
	"icon": "thumbs-up",
	"description": "A container in which you can place and manage tilting elements with common settings.",
	"keywords": [ "tiltomatic", "tilting", "animation", "group" ],
	"textdomain": "tiltomatic",
	"editorScript": "file:./tilting-elements-group.js",
	"script": "file:./tilting-elements-group-view.js",
	"attributes": {
		"tiltRangeX": {
			"type": "string",
			"source": "attribute",
			"selector": ".tilt_container",
			"attribute": "data-tilt-range-x",
			"default": "50"
		},
		"tiltRangeY": {
			"type": "string",
			"source": "attribute",
			"selector": ".tilt_container",
			"attribute": "data-tilt-range-y",
			"default": "50"
		},
		"perspective": {
			"type": "string",
			"default": "200px"
		},
		"isolatedPerspective": {
			"type": "boolean",
			"default": false
		},
		"enabled": {
			"type": "boolean",
			"default": true
		},
		"overflowMode": {
			"type": "string",
			"default": "disabled",
			"source": "attribute",
			"selector": ".tilt_container",
			"attribute": "data-overflow-mode"
		}
	},
	"providesContext": {
		"tiltomatic/tilt-range-x": "tiltRangeX",
		"tiltomatic/tilt-range-y": "tiltRangeY",
		"tiltomatic/perspective": "perspective",
		"tiltomatic/enabled": "enabled"
	},
	"supports": {
		"html": false,
		"layout": {
			"allowInheriting": true
		}
	}
}

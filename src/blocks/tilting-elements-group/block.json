{
	"$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
	"name": "tiltomatic/tilting-elements-group",
	"version": "0.0.1",
	"title": "Animated tilting group",
	"category": "design",
	"icon": "thumbs-up",
	"description": "A container in which you can place and manage tilting elements with common settings.",
	"keywords": [ "tiltomatic", "tilting", "animation", "group" ],
	"textdomain": "tiltomatic",
	"editorScript": "file:./tilting-elements-group.js",
	"script": "file:./tilting-elements-group-view.js",
	"attributes": {
		"maxAngleX": {
			"type": "number",
			"default": 50,
			"source": "attribute",
			"selector": "data-tilt-max-x"
		},
		"maxAngleY": {
			"type": "number",
			"default": 50,
			"source": "attribute",
			"selector": "data-tilt-max-x"
		},
		"perspective": {
			"type": "string",
			"default": "200px"
		},
		"isolatedPerspective": {
			"type": "boolean",
			"default": false
		},
		"enabled": {
			"type": "boolean",
			"default": true
		},
		"preventOverflow": {
			"type": "boolean",
			"default": false
		},
		"overflowSelector": {
			"type": "string",
			"enum": [ "container", "body" ],
			"default": "container"
		}
	},
	"providesContext": {
		"tiltomatic/max-angle-x": "maxAngleX",
		"tiltomatic/max-angle-y": "maxAngleY",
		"tiltomatic/perspective": "perspective",
		"tiltomatic/enabled": "enabled"
	},
	"supports": {
		"html": false,
		"layout": {
			"allowInheriting": true
		}
	}
}
